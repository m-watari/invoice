<p id="notice"><%= notice %></p>

<h1>News Histories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Price</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_histories.each do |news_history| %>
      <tr>
        <td><%= news_history.user.name %></td>
        <td><%= news_history.price %><%= price_comment(news_history.price) %></td>
        <td><%= news_history.detail %></td>
        <td><%= link_to 'Show', news_history %></td>
        <td><%= link_to 'Edit', edit_news_history_path(news_history) %></td>
        <td><%= link_to 'Destroy', news_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News History', new_news_history_path %>
